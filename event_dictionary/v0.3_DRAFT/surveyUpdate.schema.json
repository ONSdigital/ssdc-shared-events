{
  "$id": "https://ons.gov.uk/surveyUpdate.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Survey Update",
  "type": "object",
  "properties": {
    "surveyUpdate": {
      "type": "object",
      "properties": {
        "surveyId": {
          "description": "The ID of the survey.",
          "type": "uuid",
          "examples": ["21ce842b-4359-402a-9311-973f07d2d253"]
        },
        "name": {
          "description": "The name of the survey.",
          "type": "string",
          "examples": ["LMS", "OPN", "RSI", "MBS", "Census", "CCS"]
        },
        "sampleColumns": {
          "description": "The columns in the sample file.",
          "type": "array",
          "minItems": 1,
          "items": {
            "type": "string"
          },
          "examples": [["VESSEL_NAME", "MARINA_BERTH", "PONTOON", "PORT"]]
        },
        "casesHaveAddress": {
          "description": "True if the cases will have an address.",
          "type": "boolean",
          "examples": [true, false]
        }
      },
      "required": ["surveyId", "name", "sampleColumns", "casesHaveAddress"],
      "additionalProperties": false
    }
  },
  "required": ["surveyUpdate"],
  "additionalProperties": false
}
