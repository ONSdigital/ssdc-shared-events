{
  "$id": "https://ons.gov.uk/caseUpdate.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Case Update",
  "type": "object",
  "properties": {
    "caseUpdate": {
      "type": "object",
      "properties": {
        "caseId": {
          "description": "The ID of the case.",
          "type": "uuid",
          "examples": ["bcb61268-1f17-4811-b8f9-e6981a060ce6"]
        },
        "receiptReceived": {
          "description": "An EQ or paper questionnaire has been received.",
          "type": "boolean",
          "examples": [true, false]
        },
        "invalid": {
          "description": "This case is not valid.",
          "type": "boolean",
          "examples": [true, false]
        },
        "surveyLaunched": {
          "description": "The electronic questionnaire has been launched.",
          "type": "boolean",
          "examples": [true, false]
        },
        "refusalReceived": {
          "description": "This case has been refused by the respondent.",
          "type": "array",
          "items": {
            "type": "string",
            "enum": [
              null,
              "HARD_REFUSAL",
              "EXTRAORDINARY_REFUSAL",
              "SOFT_REFUSAL"
            ],
            "additionalProperties": false
          },
          "examples": ["HARD_REFUSAL", null]
        },
        "sample": {
          "description": "The original sample data.",
          "type": "object",
          "examples": [
            {
              "VESSEL_NAME": "HMS Sailalot",
              "MARINA_BERTH": "101 North",
              "PONTOON": "West Basin",
              "MARINA": "Port Hamble"
            }
          ]
        },
        "sampleSensitive": {
          "description": "A redacted version of any Personally Identifiable Information (PII) that we hold.",
          "type": "object",
          "examples": [
            {
              "PHONE_NUMBER": "",
              "EMAIL_ADDRESS": "REDACTED",
              "FIRST_NAME": "",
              "LAST_NAME": "REDACTED"
            }
          ]
        }
      },
      "required": [
        "caseId",
        "receiptReceived",
        "invalid",
        "surveyLaunched",
        "refusalReceived",
        "sample",
        "sampleSensitive"
      ],
      "additionalProperties": false
    }
  },
  "required": ["caseUpdate"],
  "additionalProperties": false
}
