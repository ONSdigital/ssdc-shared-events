{
  "$id": "https://ons.gov.uk/socialSample.schema.json",
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Social Sample",
  "type": "object",
  "properties": {
    "sample": {
      "type": "object",
      "properties": {
        "addressLine1": {
          "description": "The first line of the address.",
          "type": "string",
          "examples": ["Flat 987, Magical Apartments"]
        },
        "addressLine2": {
          "description": "The second line of the address.",
          "type": "string",
          "examples": ["123 Fake Street"]
        },
        "addressLine3": {
          "description": "The third line of the address.",
          "type": "string",
          "examples": ["Some Suburb"]
        },
        "townName": {
          "description": "The third line of the address.",
          "type": "string",
          "examples": ["Fake Town"]
        },
        "postcode": {
          "description": "The postcode of the address.",
          "type": "string",
          "examples": ["AB1 2ZX"]
        },
        "region": {
          "description": "The region of the address.",
          "type": "string",
          "examples": ["E", "W", "N"]
        },
        "uprn": {
          "description": "The UPRN of the address.",
          "type": "string",
          "examples": ["123456789"]
        }
      },
      "required": ["addressLine1", "townName", "postcode", "region", "uprn"],
      "additionalProperties": false
    },
    "sampleSensitive": {
      "type": "object",
      "properties": {
        "phoneNumber": {
          "description": "The phone number of the respondent.",
          "type": "string",
          "examples": ["REDACTED"]
        }
      },
      "required": [],
      "additionalProperties": false
    }
  },
  "required": ["sample", "sampleSensitive"],
  "additionalProperties": false
}
